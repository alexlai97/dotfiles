                       , "--normal"   , "darkorange"
                       , "--high"     , "darkgreen"

                       , "--" -- battery specific options
                       -- discharging status
                       , "-o"	, "B: <left>% (<timeleft>)"
                       -- AC "on" status
                       , "-O"	, "<left>% Charging"
                       -- charged status
                       , "-i"	, "<left>% <fn=1> </fn>"
                       , "-a", "notify-send -u critical 'Battery running out!!'"
                       ] 50

        -- network activity monitor (dynamic interface resolution)
        , Run DynNetwork     [ "--template" , "<fn=1> </fn>↑<tx>kB/s ↓<rx>kB/s"
                             , "--Low"      , "1000"       -- units: B/s
                             , "--High"     , "5000"       -- units: B/s
                             , "--low"      , "darkgreen"
                             , "--normal"   , "darkorange"
                             , "--high"     , "darkred"
                             ] 10
        , Run UnsafeStdinReader
    ]

