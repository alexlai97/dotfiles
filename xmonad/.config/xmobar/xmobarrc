    , template = "%UnsafeStdinReader% }{ %cpu% | %memory% | %battery% | %dynnetwork% | <fc=#f4d7a4>%date%</fc> |"

    -- plugins
    , commands = [ Run Weather "EGPF" ["-t","<station>: <tempC>C",
                    "-L","18","-H","25",
                    "--normal","green",
                    "--high","red",
                    "--low","lightblue"] 36000
        , Run Network "eth0" ["-L","0","-H","32",
