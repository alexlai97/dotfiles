        , Run Com "uname" ["-s","-r"] "" 36000
        , Run Date "%a %b %d %H:%M:%S" "date" 10

        -- battery monitor
        , Run Battery  [ "--template" , "<acstatus>"
                       , "--Low"      , "10"        -- units: %
                       , "--High"     , "80"        -- units: %
