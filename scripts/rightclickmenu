#!/bin/dash

usage () {
  echo "Usage: $0 (help)"
}

rofioption () {
  echo "quicknote (nvim)
timer
calendar
weather
dynwal (dynamic background)
wallpaper in sxiv
screenshot
mydwmstatus kill
mymood choose
mymood askprompt
calculator haskell ghci
spacefm (file manager)
quicknote (emacs)
xkill
daily terminal" | rofi -dmenu -p "lanuncher"
# htop
# slock
}

execute () {
  case $(rofioption) in
    *nvim*) st -e nvim;;
    *emacs*) emacsclient --create-frame;;
    timer) timer;;
    calendar) zenity --calendar;;
    weather) weather show;;
    dynwal*) dynamicwallpaper;;
    wallpaper*) sxiv ~/Pictures/Wallpaper;;
    screenshot) screenshot.sh;;
    'mydwmstatus kill') mydwmstatus kill;;
    'daily terminal') st -e abduco -A daily;;
    'mymood choose') mymood choose;;
    'mymood askprompt') mymood ask;;
    *ghci*) st -e ghci;;
    spacefm*) spacefm;;
    htop) st -e htop;;
    xkill) xkill;;
    slock) slock;;
  esac
}


# main
case "$1" in
  -h|-help|h|help) usage;exit 0 ;;
  *) execute ;;
esac
